



<li><%= @question.name %></li>
    <ul>
      <li><%= form_for([@question.survey, @question, Choice.new],remote: true, :html => {:class => "form-inline"}) do |f| %>
          
            <%= f.label :name %><br>
              <%= f.text_field :name %>
           
         
              <%= f.submit %>
           
          <% end %>
          </li>
  </ul>

  <script type="text/javascript"> 
      $(".new_choice").on("ajax:success", function(e, data, status, xhr) {
        return $(this).parent().append(xhr.responseText);
      }).on("ajax:error", function(e, xhr, status, error) {
        return $("#new_article").append("<p>ERROR</p>");
      });

</script>