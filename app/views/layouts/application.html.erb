<!DOCTYPE html>
<html>
<head>
  <title>ScurvySurvey</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<div class="header">
	<ul class="nav nav-pills nav-justified">
	<h1>Scurvy Survey</h1>
	<br>
		<% if current_user %>
	  		<li role="presentation"> <%= link_to "Logout", '/logout' %></li>
	  		<li role="presentation"> <%= link_to 'Home', '/' %> </li>
	  		<li role='presentation'> <a href="#" onclick="div_show();">New Survey</a></li>
		<% else %>
	 		<li role="presentation"> <%= link_to 'Login', '/login' %></li> 
	 		<li role="presentation"><%= link_to 'Signup', '/users/new' %></li>
			<li role="presentation"> <%= link_to 'Home', '/' %> </li>
		<% end %>
	</ul>

	<ul>
		<% flash.each do |type,  message| %>
		<div class="alert flash <%= type %>">
			<li role="presentation"> <%= message %> </li>
		 </div>
		<% end %>  
		
	</ul>
	</div>


	<%= yield %>
	</div>

</body>
</html>
