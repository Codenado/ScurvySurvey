<% if current_user %>
  <div id='show' class="take_survey">
  <%= form_for([@survey], :html => {:class => "form-horizontal"}) do |f| %>
      <div class="form-group">
      <%= f.text_field :name, placeholder: "New question" %>
      </div>
      <div class="form-group">
      <%= f.text_area :name, placeholder: "description" %>
       </div>   
        <%= f.submit class: 'btn btn-default btn-xs' %>
      
     <% end %>
  </div>
<% end %>
  
  <%if @surveys %> 
    <% @surveys.each do |survey| %>
      <div class='.col-md-6 take_survey'>
      <h3><%= survey.name %><small> created by <%= survey.user.name %></small></h3> 
      <p><%= survey.description %></p>
      <%= link_to("Take Survey",survey)%>
      <% if survey.user == current_user %>
        <%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    <% end %>
  <% end %>  



